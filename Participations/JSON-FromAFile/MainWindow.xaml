<Window x:Class="JSON_FromAFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_FromAFile"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Choose a Color" HorizontalAlignment="Left" Margin="54,49,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cboColors" HorizontalAlignment="Left" Margin="85,80,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboColors_SelectionChanged"/>
        <ListBox x:Name="lstResults" Height="272" VerticalAlignment="Bottom" MouseDoubleClick="lstResults_MouseDoubleClick"/>

    </Grid>
</Window>
