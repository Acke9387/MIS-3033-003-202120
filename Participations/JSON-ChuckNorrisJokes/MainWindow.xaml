<Window x:Class="JSON_ChuckNorrisJokes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_ChuckNorrisJokes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="https://cdn.mos.cms.futurecdn.net/BAh6GuiTdLgZ3NG5TaDJJj-1200-80.jpg"/>
    </Window.Background>
    <Grid>
        <ComboBox x:Name="cboCategories" HorizontalAlignment="Left" Margin="55,44,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboCategories_SelectionChanged"/>
        <Label Content="Select a category" HorizontalAlignment="Left" Margin="32,17,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtJoke" HorizontalAlignment="Left" Margin="10,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="213" Width="310" Background="#99FFFFFF"/>

    </Grid>
</Window>
